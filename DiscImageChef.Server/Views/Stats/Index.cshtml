        <table align="center"
               border="1">
            <tr>
                <th>Partition scheme</th>
                <th>Times</th>
            </tr>
            @foreach(Partition partition in ViewBag.repPartitions)
            {
                <tr>
                    <td>
                        @partition.Name
                    </td>
                    <td>
                        @($"{partition.Count}")
                    </td>
                </tr>
            }
        </table>
    </div>
}
@if(ViewBag.repFilesystems != null)
{
